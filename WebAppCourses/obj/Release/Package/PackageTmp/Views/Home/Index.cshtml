@model WebAppCourses.Models.CoursesTypes

<br /><br />
<div class="container">
    <div class="form-group">
        @if (ViewBag.CourseList != null)
         {
            @Html.DropDownListFor(model => model.CourseId, ViewBag.CourseList as SelectList, "--Select Course--", new { @class = "form-control" })
         }
    </div>
    <div class="form-group">

        @Html.DropDownListFor(model => model.TypeId, new SelectList(" "), "--Select Type--", new { @class = "form-control" })

    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#CourseId").change(function () {
            $.get(" /Home/GetTypeList", { CourseId: $("#CourseId").val() }, function (data) {
                $("#TypeId").empty();
                $.each(data, function (index, row) {
                    $("#TypeId").append("<option value='" + row.TypeId + "'>" + row.CourseTypes + "</option>")



                });
            });
        })
    });
</script>





